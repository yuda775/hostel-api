generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model RoomFacilitiesRelation {
  roomId     Int
  facilityId Int
  room       Rooms          @relation(fields: [roomId], references: [id])
  facility   RoomFacilities @relation(fields: [facilityId], references: [id])

  @@id([roomId, facilityId])
}

model Rooms {
  id                   Int                      @id @default(autoincrement())
  roomNumber           Int
  capacity             Int
  price                Float
  type                 EnumType
  images               RoomImages[]
  roomFacilityRelation RoomFacilitiesRelation[]
  reservation          Reservation[]
}

model RoomImages {
  id     Int    @id @default(autoincrement())
  images String
  room   Rooms  @relation(fields: [roomId], references: [id])
  roomId Int
}

model RoomFacilities {
  id                     Int                      @id @default(autoincrement())
  name                   String
  image                  String?
  roomFacilitiesRelation RoomFacilitiesRelation[]
}

enum EnumType {
  DORM
  PRIVATE
}

model Reservation {
  id         String            @id @default(cuid())
  checkin    DateTime          @default(now())
  checkout   DateTime
  guestTotal Int
  status     ReservationStatus
  amount     Float
  room       Rooms             @relation(fields: [roomId], references: [id])
  roomId     Int
}

enum ReservationStatus {
  paid
  pending
  canceled
}
